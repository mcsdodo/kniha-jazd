{
  "permissions": {
    "allow": ["Bash(cargo:*)", "Bash(npm:*)", "Bash(git:*)"]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -File .claude/hooks/pre-commit.ps1",
            "timeout": 120000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "pwsh -NoProfile -File .claude/hooks/post-commit-reminder.ps1",
            "timeout": 5000
          }
        ]
      }
    ]
  }
}
